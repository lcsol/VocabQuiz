<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizStatistics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstScore_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="Your First Score"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/firstPercentage_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/highestScore_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Your Highest Score"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/highestPercentage_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/firstThree_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="First Three Got 100%"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/firstThreeName_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>